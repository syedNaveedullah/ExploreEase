<% layout("layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <div class="col-6 offset-3">
    <h1>Login</h1>
    <form action="/login" method="POST" novalidate class="needs-validation">
      <!-- for username -->
      <div class="mb-3">
        <lable for="username" class="form-lable">username</lable>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required />
      </div>
      <!-- for password -->
      <div class="mb-3">
        <lable for="password" class="form-lable">Password</lable>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required />
      </div>
      <!-- submit button -->
      <button class="btn btn-success">login</button>
    </form>
  </div>
</div>
